<div class="container justify-content-center">
    {{!-- method="post" action="/search" --}}
    <form class="mt-4 login" method="post" action="/search"  >
        <div class="form-row align-items-center">
            <div class="col-auto">
                <label class="mr-sm-2" for="inlineFormCustomSelect">Location</label>
                <select class="custom-select mb-2 mr-sm-2 mb-sm-0" name="location" >
                    <option selected>Choose...</option>
                    <option  value="1">UCF - University of Central Florida</option>
                    <option  value="2">Full Sail</option>
                    <option  value="3">Rollins College</option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary" id="search-btn">Submit</button>
            </div>
        </div>
    </form>

    <form class="form-inline" action="/gamesearch/destiny" method="POST">
        <div class="form-group mx-sm-3">
            <label for="inputPassword2" class="sr-only">Game Title</label>
            <input type="input" class="form-control" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <div id="users" class="mt-4">
        <div class="user-header">
            <h2>Available Users</h2>
        </div>
        <div id="users-results">
            <ul>
                {{#each users}}
                    <div class="container" style="background-color: white">
                        <a href="/username/{{id}}">{{name}}</a>
                    </div>
                {{/each}}
            </ul>
        </div>
    </div>
</div>