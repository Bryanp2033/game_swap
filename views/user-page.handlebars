<div class="container">
    <div class="row">
        <div class="card">
            <h3 class="card-header">{{name}}</h3>
            <div class="card-body row">
                <div class="col">
                    <h4 class="card-title">Special title treatment</h4>
                    <p class="card-text">Last active on: {{last_active}}</p>
                </div>
                <div class="col">
                    <img class="card-img-top" src="{{image}}" alt="user image">                
                </div>
            </div>
        </div>  
    </div>
</div>